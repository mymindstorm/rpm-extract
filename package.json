{
  "name": "@mymindstorm/rpm-extract",
  "version": "2.0.0",
  "description": "Programmatically extract files from rpm packages",
  "main": "lib/RPMExtractorStream.js",
  "module": "lib/RPMExtractorStream.js",
  "scripts": {
    "build": "rm -rf lib && prettier . --write && eslint . && tsc",
    "prepublish": "npm run build"
  },
  "dependencies": {
    "concat-stream": "^2.0.0",
    "cpio-stream": "^1.4.3",
    "lzma-native": "^8.0.6",
    "read-chunk": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/concat-stream": "^2.0.3",
    "@types/lzma-native": "^4.0.4",
    "@types/node": "^22.13.1",
    "esbuild": "^0.25.0",
    "esbuild-plugin-d.ts": "^1.3.1",
    "eslint": "^9.20.1",
    "prettier": "^3.5.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false,
    "exclude": [
      "test/**/*",
      "lib/**/*"
    ],
    "reporter": [
      "html",
      "lcov"
    ],
    "check-coverage": true,
    "statements": 100,
    "branches": 90,
    "functions": 100,
    "lines": 100,
    "cache": true,
    "all": true
  },
  "engines": {
    "node": ">=4.5.0",
    "npm": ">=3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dowjones/rpm-extract.git"
  },
  "keywords": [
    "rpm",
    "extract",
    "cpio",
    "unarchive",
    "decompress"
  ],
  "files": [
    "lib"
  ],
  "author": "Brendan Early <mymindstorm@evermiss.net>",
  "license": "ISC"
}
